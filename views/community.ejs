<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>Document</title>
    <style>
        body{
            background-color: blanchedalmond;
        }
        .header{
            position: sticky;
            top: 0; 
            z-index: 1000; 
            background-color: transparent; 
            backdrop-filter: blur(10px); 
            width: 101%;
        }
        .filled {
            fill: red;
        }
        .rows{
            background-color: aliceblue;
            width: 23rem;
            align-items: center;
            height: auto;
            display: flex;
            flex-direction: column;
        }
        
    </style>
</head>
<body>
    <div class="container" style="padding: 0px">
        <header class="header">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <h1 style="color: #A82400; margin: 20px;">Community</h1>
                <form action="/commForm" method="get">
                    <button class="btn btn-light" style="background-color: #A82400; color: white;">Create</button>
                </form>
            </div>
            <hr>
        </header>
        <div class="row g-1">
            <% for(community of Communities){ %>
                    <div class="col-20 col-md-6 col-lg-4 d-flex justify-content-center mb-3" style="padding: 0; margin: 0px;">
                       <div class="rows">
                        <button type="button" class="btn btn-light mt-1 mb-1" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="<%=community.admin%>" style="font-style: oblique;">
                            <b><%=community.title%></b>
                        </button>
                        <a href="/community/<%= community._id %>/posts">
                            <div>
                                <img src="<%=community.thumbnail.url%>" alt="thumbnail" style="width: 23rem;">
                            </div>
                        </a>
                        <div style="margin-left: 5%;">
                            <b>Description</b>
                            <p style="overflow-y: scroll; overflow-x: hidden;  scrollbar-width: none; height: 80px; width: 90%;"><%= community.description %></p>
                        </div>
                       </div>
                    </div>
                    <%}%>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');
        const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl));
    </script>
</body>
</html>