<%-layout('/layouts/boilerplate.ejs')%>
<style>
    body {
        background: blanchedalmond;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    }
    
    /* Responsive Content Card */
    .content-card {
        width: 100%;
        max-width: 800px;
        margin: 1rem auto;
        overflow: hidden;
        border-radius: 1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    /* Flexible Media Container */
    .content-media {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
    }

    /* Responsive Form */
    .post-form {
        width: 100%;
        max-width: 700px;
        margin: 0 auto;
        padding: 1rem;
    }

    /* Mobile-first Flexbox Adjustments */
    .post-content {
        display: flex;
        flex-direction: column;
    }

    .form-card{
        width: 100%;
        background-color: rgb(255, 235, 205);
        padding: 20px;
        border-radius: 25px;
        border: 2px solid rgb(253, 225, 184);
        box-shadow:  0 4px 6px rgba(0,0,0,0.1);
    }

    @media (min-width: 768px) {
        .post-content {
            flex-direction: row;
        }

        .content-card {
            display: flex;
        }

        .content-media-container {
            width: 50%;
        }

        .content-details {
            width: 50%;
            padding: 1rem;
        }
    }

    @media (max-width: 600px) {
        .post-form {
            padding: 0.5rem;
        }

        .content-card {
            flex-direction: column;
        }

        .content-media-container, 
        .content-details {
            width: 100%;
        }
    }

    /* Additional Mobile Refinements */
    .mobile-stack {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .interaction-buttons {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 1rem;
    }
</style>

<div class="container mx-auto px-4">
    <!-- Post Creation Form - Responsive -->
    <form action="/community/<%=community.id%>/main" method="post" enctype="multipart/form-data" class="post-form glassomorphic rounded-2xl p-4 md:p-6">
        <section class="form-card">

            <div class="flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-4">
                <a href="/profile" class="self-center">
                    <img 
                    src="/image.jpg" 
                    class="rounded-full border-4 border-white shadow-md" style="width: 60px; height: 53px;"
                    >
                </a>
                <div class="flex-grow w-full">
                    <textarea 
                    name="upload[content]"
                    placeholder="What's your insight today?" 
                    class="w-full h-24 p-4 bg-[#ffebcd] rounded-xl focus:ring-2 focus:ring-[#ffe6bf] transition"
                    ></textarea>
                    
                    <div class="flex flex-col md:flex-row justify-between items-center mt-2 space-y-2 md:space-y-0">
                        <div class="flex space-x-4 w-full justify-start">
                            <input 
                            type="file" 
                            name="upload[image]" 
                            class="text-sm text-gray-500 
                            file:mr-4 file:py-2 file:px-4
                            file:rounded-full file:border-0
                            file:text-sm file:font-semibold
                            file:bg-[#A82400] file:text-white
                            hover:file:bg-[#8A1F00]"
                            >
                        </div>
                        <button class="px-6 py-2 bg-[#A82400] text-white rounded-full w-full md:w-auto text-center">
                            Publish
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <!-- Content Feed - Responsive -->
    <main class="space-y-8 mt-8">
        <% for(let uploadPost of newUploadPost) { %>
            <article class="content-card post-content bg-white">
                <% if(uploadPost.image && uploadPost.image.url) { %>
                    <div class="content-media-container">
                        <img 
                            src="<%=uploadPost.image.url%>"
                            class="content-media w-full h-full object-cover"
                            alt="Post media"
                        >
                    </div>
                <% } %>
                
                <div class="content-details p-4">
                    <div class="flex items-center mb-4 mobile-stack">
                        <img 
                            src="/image.jpg"
                            class="w-12 h-12 rounded-full mr-4 border-2 border-indigo-200"
                        >
                        <div>
                            <h3 class="font-bold text-lg text-gray-900">Dr. Muskan</h3>
                            <p class="text-sm text-gray-500">2 hours ago</p>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h2 class="text-xl font-bold mb-3 text-gray-900">Future of humanity</h2>
                        <p class="text-gray-600"><%=uploadPost.content%></p>
                    </div>
                    
                    <div class="interaction-buttons">
                        <div class="flex space-x-4 text-gray-600">
                            <button class="flex items-center">
                                <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                <span>Likes</span>
                            </button>
                            <button class="flex items-center">
                                <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                                <span>Comments</span>
                            </button>
                        </div>
                        <button class="text-gray-600">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z" />
                            </svg>
                        </button>
                    </div>
                </div>
            </article>
        <% } %>
    </main>
</div>